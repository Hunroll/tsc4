}
int tlen(tuple t) asm "TLEN";


cell recFnc(int hash, cell tree) {
  slice s = tree.begin_parse();
  int n = slice_refs(s);
  cell next = null();
  while (n > 0)
  {
    n = n - 1;
    next = s~load_ref();
    int ch = cell_hash(next);
    if (ch == hash) {
      return next;
    }

    if (cell_depth(next) > 0) {
      cell found = recFnc(hash, next);
      if (~ cell_null?(found)) {
        return found;
      }
    }
  }
  return null();
}

cell DFS(int hash, cell tree) {
  tuple list = empty_tuple();
  list = cons(tree, list);
  int n = 1;
  while (n > 0) {
    (tree, list) = uncons(list);
    slice s = tree.begin_parse();
    repeat(slice_refs(s))
    {
      cell c = s~load_ref();
      if (cell_hash(c) == hash)
      {
        return c;
      }
      if (cell_depth(c) > 0)
      {
        list = cons(c, list);
        n += 1;
      }
    }
  }
  return begin_cell().end_cell();
}

